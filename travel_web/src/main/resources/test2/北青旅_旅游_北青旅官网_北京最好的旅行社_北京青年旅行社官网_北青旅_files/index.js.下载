$(document).ready(function() {
	
	/*FeatureList(".index_focus", {
		"onclass" : "noopdiv",
		"offclass" : "opdiv",
		"pause_on_act" : "mouseover",
		"interval" : 5000,
		"speed" : 5
	});*/
	
	$('.index_gala .menus li').click(function(){
		$(this).siblings().removeClass('hover');
		$(this).addClass('hover');
		$(this).closest('.index_gala').find('.line_list').removeClass('hover');
		$(this).closest('.index_gala').find('.line_list').eq($(this).index()).addClass('hover');
		$(this).closest('.index_gala').find('.line_list').eq($(this).index()).find('img.lazy').lazyload({
			event : "sporty"
		});
		$(this).closest('.index_gala').find('.line_list').eq($(this).index()).find('img.lazy').trigger("sporty");
	});
	
	$('.index_outbound .menus li').click(function(){
		$(this).siblings().removeClass('hover');
		$(this).addClass('hover');
		$(this).closest('.index_outbound').find('.more').removeClass('hover');
		$(this).closest('.index_outbound').find('.more').eq($(this).index()).addClass('hover');
		$(this).closest('.index_outbound').find('.line_list').removeClass('hover');
		$(this).closest('.index_outbound').find('.line_list').eq($(this).index()).addClass('hover');
		$(this).closest('.index_outbound').find('.line_list').eq($(this).index()).find('img.lazy').lazyload({
			event : "sporty"
		});
		$(this).closest('.index_outbound').find('.line_list').eq($(this).index()).find('img.lazy').trigger("sporty");
	});
	
